{
  "trailingComma": "es5",
  "semi": true,
  "tabWidth": 2,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@trivago/prettier-plugin-sort-imports"
  ],
  "importOrder": [
    "^@app/(.*)$",
    "^@entities/(.*)$",
    "^@features/(.*)$",
    "^@shared/api",
    "^@shared/api/(.*)$",
    "^@shared/utils",
    "^@shared/utils/(.*)$",
    "^@shared/hooks",
    "^@shared/hooks/(.*)$",
    "^@shared/providers",
    "^@shared/providers/(.*)$",
    "^@shared/UI",
    "^@shared/UI/(.*)$",
    "^@shared/constants",
    "^@shared/constants/(.*)$",
    "^[./]",
    "^@public/(.*)$"
  ],
  "importOrderSortSpecifiers": true
}
